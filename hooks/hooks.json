{
  "description": "Sandboxed command execution with auto-approval",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "'${CLAUDE_PLUGIN_ROOT}/hooks/setup.sh'",
            "async": false,
            "timeout": 30
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "'${CLAUDE_PLUGIN_ROOT}/hooks/permission-check.py'",
            "async": false,
            "timeout": 5
          }
        ]
      }
    ]
  }
}
